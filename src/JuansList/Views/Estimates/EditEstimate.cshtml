@model JuansList.ViewModels.EditEstimateViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Estimate</title>
</head>
<body>

<form asp-action="EditEstimate">
    <div class="form-horizontal">
        <h4>Edit Estimate</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="estimate.EstimateId" />
        <div class="form-group">
            <label asp-for="estimate.Title" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="estimate.Title" class="form-control" />
                <span asp-validation-for="estimate.Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="estimate.Description" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="estimate.Description" class="form-control" />
                <span asp-validation-for="estimate.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="estimate.Price" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="estimate.Price" class="form-control" />
                <span asp-validation-for="estimate.Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="estimate.DateStart" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="estimate.DateStart" class="form-control" />
                <span asp-validation-for="estimate.DateStart" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="estimate.DateEnd" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="estimate.DateEnd" class="form-control" />
                <span asp-validation-for="estimate.DateEnd" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-default" asp-action="UpdateEstimate" asp-route-id="@Model.estimate.EstimateId">Save</a>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
