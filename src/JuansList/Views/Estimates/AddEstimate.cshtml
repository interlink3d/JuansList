@model JuansList.Models.Estimate


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Estimate</title>
</head>
<body>

<form asp-action="AddEstimate">
    <div class="form-horizontal">
        <h4>Estimate</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateStart" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateEnd" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col offset-m2 col m10">
                <input type="submit" value="Add Estimate" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @*<a asp-action="Index">Back to List</a>*@
</div>

</body>
</html>
