@model JuansList.ViewModels.EditVendorProfileViewModel
@{
    ViewData["Title"] = "Edit Your Profile";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Profile</title>
</head>
<body>
<h2>@ViewData["Title"]</h2>

    <form asp-controller="Vendor" asp-action="UpdateContact" asp-route-id="@Model.VendorUser" method="post">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendorUser.Id" />
            <div class="form-group">
                <label asp-for="VendorUser.FirstName" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.FirstName" class="form-control" />
                    <span asp-validation-for="VendorUser.FirstName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VendorUser.LastName" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.LastName" class="form-control" />
                    <span asp-validation-for="VendorUser.LastName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VendorUser.CompanyName" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.CompanyName" class="form-control" />
                    <span asp-validation-for="VendorUser.CompanyName" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VendorUser.StreetAddress" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.StreetAddress" class="form-control" />
                    <span asp-validation-for="VendorUser.StreetAddress" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VendorUser.Zip" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.Zip" class="form-control" />
                    <span asp-validation-for="VendorUser.Zip" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VendorUser.ProfileImage" class="col m2 control-label"></label>
                <div class="col m10">
                    <input asp-for="VendorUser.ProfileImage" class="form-control" />
                    <span asp-validation-for="VendorUser.ProfileImage" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col offset-m2 col m10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
    <br />
    <div class="col offset-m2 col m6">
        <a asp-controller="Albums" asp-action="AddAlbum" class="waves-effect waves-light btn">Add New Album</a>
    </div>
    <br />

    @await Html.PartialAsync("_GetCoupons")



</body>
</html>