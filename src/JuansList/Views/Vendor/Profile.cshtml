@model JuansList.ViewModels.VendorProfileViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vendor Profile</title>
</head>
<body>

<br/>
<br/>
<div class="col l12 z-depth-5" style="background-color: #1A936F; color: #F3E9D2; font-weight: bold;">
    <br/>
    <div class="row" style="font-size:20px; ">
        <div class="col offset-m3 m4">
            <ul>
                <li>@Html.DisplayFor(model => model.VendorUser.FirstName) @Html.DisplayFor(model => model.VendorUser.LastName)</li>
                <li>@Html.DisplayFor(model => model.VendorUser.CompanyName)</li>
                <li><a href="@Model.VendorUser.Website" target="_blank">Company Website</a></li>
                <li>@Html.DisplayFor(model => model.VendorUser.StreetAddress)</li>
                <li>@Html.DisplayFor(model => model.VendorUser.City), @Html.DisplayFor(model => model.VendorUser.State) @Html.DisplayFor(model => model.VendorUser.Zip)</li>
            </ul>
        </div>
        <div class="col m5">
            <img src="@Url.Content(Model.VendorUser.ProfileImage)" alt="Image" style="padding-top: 1em; height:150px;" />
        </div>
    </div> 
    <div class="row">
        <div class="col offset-l3 m8 l8">
            @foreach (var vc in Model.VenCat)
            {
                <p>@Html.DisplayFor(modelItem => vc.Category.Name) - @Html.DisplayFor(modelItem => vc.Category.Description)</p>

            }
        </div>
    </div>
    <div class="row" >
        <div class="col offset-m3 m7" style="font-size:20px;">@Html.DisplayFor(model => model.VendorUser.Description)</div>
    </div>
    <br/>
    <div class="row">
        <div class="col offset-m3 m4 ">
            <a asp-controller="Estimates" asp-action="AddEstimate" class="waves-effect waves-light btn">Request Estimate</a>
        </div>
        <div class="col m4 ">
            <a asp-controller="Messages" asp-action="AddMessage" class="waves-effect waves-light btn">Send Message</a>
        </div>
    </div>
    <br/>
</div>
    <br />
    <br />
    <div class="z-depth-5" style="background-color: #114B5F;">
        <br/>
        <h4 class="center" style="color: #F3E9D2; font-weight: bold;">Albums!</h4>
        <div class="row">
            <div class="col l12">
                @foreach (var alb in Model.Albums)
                {
                    
                    <div class="col s6 m6 l4">
                        <div class="card">
                            <div class="card-image">
                                <img src="@alb.Images[0].ImageUrl" style="max-height: 200px;">
                            </div>
                            <div class="card-action center" style="background-color:#C6DABF;">
                                <a asp-controller="Albums" asp-action="AlbumView" asp-route-id="@alb.AlbumId" class="waves-effect waves-light btn">@Html.DisplayFor(modelItem => alb.Title)</a>
                            </div>
                        </div>
                    </div>
                }
                <br />
            </div>
            <br/>
        </div>
        <br />
    </div>

    <br/>
    <br/>
    <div class="z-depth-5" style="background-color: #1A936F;"> 
        <br/>
        <h4 class="center" style="color: #F3E9D2; font-weight: bold;">Specials!</h4>
        <div class="row"> 
            <div class="col l12">
                @foreach (var cpn in Model.Coupons)
                {

                    <div class="col s6 m6 l6 center">
                        <div class="card" style="background-color: #C6DABF;">
                            <div class="card-content" style="color: #114B5F;">
                                <span class="card-title">@Html.DisplayFor(modelItem => cpn.Title)</span>
                                <div class="divider"></div>
                                <p style="padding-top:10px;">
                                    @Html.DisplayFor(modelItem => cpn.Content)
                                </p>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
        <br/>
    </div>
    <br/>
    <br/>
</body>
</html>
