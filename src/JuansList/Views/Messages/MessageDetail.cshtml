@model JuansList.ViewModels.MessageDetailViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Message</title>
</head>
<body>

<form asp-controller="Messages" asp-action="UpdateMessage" asp-route-id="@Model.SingleMessage.MessageId" method="post">
    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SingleMessage.MessageId" />
        <div class="form-group">
            <label asp-for="SingleMessage.Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SingleMessage.Text" class="form-control" />
                <span asp-validation-for="SingleMessage.Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SingleMessage.DateStamp" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SingleMessage.DateStamp" class="form-control" />
                <span asp-validation-for="SingleMessage.DateStamp" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col offset-m2 col m10">
                <button type="submit" value="Save" class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
</form>
<br />
<div>
    <a asp-action="GetMessages" asp-controller="Messages" class="waves-effect waves-light btn">Back to Profile</a>
</div>

</body>
</html>
