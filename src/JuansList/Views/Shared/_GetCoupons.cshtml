@model JuansList.ViewModels.EditVendorProfileViewModel


<h2>Coupons</h2>

@foreach (var item in Model.Coupons)
{
    <div class="row">
        <div class="col m2"><a asp-action="CouponDetail" asp-controller="Coupons" asp-route-id="@item.CouponId">@Html.DisplayFor(modelItem => item.Title)</a></div>
        <div class="col m4">@Html.DisplayFor(modelItem => item.Content)</div>
        <div class="col m2">
            <span class="chip">
                <a asp-controller="Coupons" asp-action="DeleteCoupon" asp-route-id="@item.CouponId"><i class="close material-icons">close</i>Delete</a>
            </span>
        </div>
    </div>
}
 
<br />   
<div class="col m4 ">
    <a asp-controller="Coupons" asp-action="AddCoupon" class="waves-effect waves-light btn">Add Coupon</a>
</div>