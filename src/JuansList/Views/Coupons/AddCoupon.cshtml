@model JuansList.Models.Coupon

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Coupon</title>
</head>
<body>

<form asp-action="AddCoupon">
    <div class="form-horizontal">
        <h4>Add New Coupon</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col m2 control-label"></label>
            <div class="col m10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="col-md-2 control-label"></label>
            <div class="col m10">
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col offset-m2 col m10">
                <input type="submit" value="Create" class="waves-effect waves-light btn" />
            </div>
        </div>
    </div>
</form>
<br />
<div>
    <a asp-action="UpdateProfile" asp-controller="Vendor" class="waves-effect waves-light btn">Back to Update Profile</a>
</div>

</body>
</html>
